<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginView">
    <children>
        <TextField fx:id="username" alignment="TOP_LEFT" layoutX="226.0" layoutY="148.0" promptText="Username" />
        <Label fx:id="errorLabel" alignment="CENTER" layoutX="17.0" layoutY="253.0" prefHeight="18.0" prefWidth="569.0" textFill="RED" />
        <PasswordField fx:id="password" alignment="TOP_LEFT" layoutX="225.0" layoutY="204.0" promptText="Password" />
        <Button fx:id="login" defaultButton="true" layoutX="214.0" layoutY="286.0" mnemonicParsing="false" onAction="#login" prefHeight="26.0" prefWidth="222.0" text="Log in " />
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="131.0" layoutY="18.0" prefHeight="79.0" prefWidth="340.0" text="Welcome to Yakuza" textFill="#f000b9">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Label layoutX="55.0" layoutY="338.0" prefHeight="42.0" prefWidth="150.0" text="Not registered yet?" />
        <Button fx:id="register" defaultButton="true" layoutX="214.0" layoutY="346.0" mnemonicParsing="false" onAction="#register" prefHeight="26.0" prefWidth="150.0" text="Create an Account" />
    </children>
